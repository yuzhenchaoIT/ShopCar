<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/login_layout_re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp">

        <EditText
            android:id="@+id/login_edit_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:hint="手机号"
            android:paddingLeft="50dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="36dp"
            android:src="@mipmap/login_icon_phone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_layout_re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_layout_re1"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/login_edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:inputType="textPassword"
            android:hint="密码"
            android:paddingLeft="50dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="36dp"
            android:src="@mipmap/login_icon_lock" />

        <ImageView
            android:id="@+id/login_image_eye"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:src="@mipmap/login_icon_eye" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/login_layout_re3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_layout_re2"
        android:layout_marginTop="18dp">
        <CheckBox
            android:id="@+id/login_checkbox_rember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="-8dp"
            android:text="记住密码"/>

        <TextView
            android:id="@+id/login_text_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:layout_marginTop="2dp"
            android:textColor="#FFF"
            android:text="快速注册"/>

    </RelativeLayout>

    <Button
        android:id="@+id/login_button_login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_registered_btn"
        android:textColor="#ff5f71"
        android:text="登陆" />




</RelativeLayout>